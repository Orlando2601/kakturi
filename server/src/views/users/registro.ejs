<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head') %>
<body>
    <%- include ('../partials/header') %><!-- header importado -->
    <main id="main" class="registro">
        <div class="iconoUser">
            <i class="far fa-user"></i>
        </div><!-- icono usuario-->

        <form action="/user/registro" method="POST" id="formulario" enctype="multipart/form-data">

            <label for="nombre">Ingrese nombre</label>
            <input type="text" name="nombre" id="nombre"  value="<%= locals.old && old.nombre ? old.nombre : '' %>">
            <p class="errorForm" id="errorNombre"></p>
                <% if(locals.errors && errors.nombre){ %>                   
                        <p class="errorForm" id="showError"><%= errors.nombre.msg%></p>             
                <% }%>

            <!-- Este codigo me permite mostrar los errores deprueba  en la vista -->
            <label for="apellido">Ingrese apellido</label>
            <input type="text" name="apellido" id="apellido" value="<%= locals.old && old.apellido ? old.apellido : '' %>">
            <p class="errorForm" id="errorApellido"></p>
            <% if(locals.errors && errors.apellido){ %>                   
                <p class="errorForm" id="showError"><%= errors.apellido.msg%></p>             
            <% }%>
    
            <!-- Este codigo me permite mostrar los errores deprueba  en la vista -->
            <label for="correo">Ingrese Correo electrónico</label>
            <input type="email" name="correo" id="correo" value="<%= locals.old && old.correo ? old.correo : ' ' %>">
            <p class="errorForm" id="errorCorreo"></p>
            <% if(locals.errors && errors.correo){ %>                   
                <p class="errorForm" id="showError"><%= errors.correo.msg%></p>             
            <% }%>

    
           <!-- Este codigo me permite mostrar los errores deprueba  en la vista -->
            <label for="contraseña">Ingrese Contraseña</label>
            <input type="password" name="contraseña" id="contraseña" minlength="8" maxlength="12">
            <p class="errorForm" id="errorContraseña"></p>
            <% if(locals.errors && errors.contraseña){ %>                   
                <p class="errorForm" id="showError"><%= errors.contraseña.msg%></p>             
            <% }%>
            <label for="repiteContraseña">Repite la contraseña</label>
            <input type="password" name="repiteContraseña" id="repiteContraseña" minlength="8" maxlength="12">
            <p class="errorForm" id="errorRepiteContraseña"></p>
            <% if(locals.errors && errors.repiteContraseña){ %>                   
                <p class="errorForm" id="showError"><%= errors.repiteContraseña.msg%></p>             
            <% }%>
            <label for="imagen">Imagen de usuario</label>
            <input type="file" id="imagenUser" name="imagen" placeholder="Ingrese imagen de usuario" >
        
    
             <!-- Este codigo me permite mostrar los errores deprueba  en la vista -->
            <div class="botones">
                <input class="btn" type="submit" value="Registrar">
                <input class="btn" type="reset" value="Borrar">
            </div><!-- caja botones formulario -->

        </form><!-- formulario de carga de datos de registro -->
    </main>
    <script src="../../js/registroUser.js"></script>
    <%- include ('../partials/footer') %> <!-- footer importado -->
    </body>
</html>