<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/head') %>
<body>
    <%-include ('../partials/header') %> <!-- importando header -->
    <main class="mainAdminPerfil">
        <section class="imagenUser">
            <img src="/images/dbUsers/<%= user.imagen %>" alt="">
        </section>
        <div class="infoUser">
            <h1>Bienvenido !!! <%= user.nombre %></h1>
        </div>
        <button id="crearProducto"> <a href="/admin/nuevo">Crear Nuevo Producto</a> </button> 
        <button id="crearProducto"> <a href="/master">Gestion de usuarios</a> </button> 
        <div class="articulo">
            <% lista.forEach(item => { %> <!-- codigo js para rcorrer el objeto enviado en el controlador -->
            <article>
                <div class="divImg">
                    <img src="/images/dbProductos/<%= item.imagen %>" alt=""><!-- imagen del articulo -->

                </div>
       
               <div class="vermas">
                   <p class="titulo"><%= item.titulo %></p>
                   <p class="precio">COP$<%= item.precio %></p>
                   <div id="botones">
                    <form class="formCompra"  action="/admin/editar/<%= item.id %>">
                        <input id="edit" type="submit"  value="Editar Producto">
                    </form> <!-- control de button para editar producto-->
                    <form class="formCompra" action="/admin/eliminar/<%= item.id %>?_method=delete" method="POST">
                        <input  id="delete" type="submit"  value="Borrar Producto">
                    </form><!-- control de button para eliminar producto -->
                </div>
               </div><!-- Caja desplegable de cada articulo, par aver descripcion rapida -->
               
            </article><!-- vista de cada articulo -->
            <% }); %><!-- cierre codigo js anterior -->
        </div>
        
        <button id="cerrarSesion"> <a href="/user/cerrarSesion">Logout</a> </button> <!-- button de cerrar sesion -->
    </main>
    <%-include ('../partials/footer') %> <!-- importando footer -->
</body>
</html>